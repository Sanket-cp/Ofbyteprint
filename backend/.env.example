# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/printhub
# For production: mongodb+srv://username:password@cluster.mongodb.net/printhub

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_EXPIRE=7d

# External API Configuration
# Generate secure API keys for external admin access
API_KEYS=your-admin-api-key-1,your-admin-api-key-2

# Customer Tracking API Keys (Read-Only Access)
TRACKING_API_KEYS=your-tracking-api-key-1,your-tracking-api-key-2

# Cloudinary (for file uploads)
CLOUDINARY_CLOUD_NAME=your-cloudinary-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Email Configuration (Gmail SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=PrintHub <noreply@printhub.com>

# Payment Gateways
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

RAZORPAY_KEY_ID=rzp_test_your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# Frontend URL
FRONTEND_URL=http://localhost:8080

# File Upload Limits
MAX_FILE_SIZE=50000000
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf